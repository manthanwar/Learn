        "comments": "#baa",
        "[Default Dark+] [Dracula] [Dracula Soft]": {
            "textMateRules": [
                //-------------------------------------------------------------
                //#region Markdown
                //-------------------------------------------------------------
                {
                    "scope": "markup.heading.markdown",
                    "settings": {
                        // "foreground": "#bd93f9", // purple
                        // "foreground": "#C16069" // crmson
                        "foreground": "#8be9fd", // cyan
                    }
                },
                {
                    "scope": "heading.2.markdown",
                    "settings": {
                        // "foreground": "#D2876D" // brick
                        // "foreground": "#bd93f9", // purple
                        // "foreground": "#8be9fd", // cyan
                        "foreground": "#D2876D" // brick
                    }
                },
                {
                    "scope": "heading.3.markdown",
                    "settings": {
                        // "foreground": "#8be9fd", // cyan
                        "foreground": "#86C0D1" // lightBlue
                    }
                },
                {
                    "scope": "markup.inline.raw",
                    "settings": {
                        "foreground": "#62E884",
                    }
                },
                {
                    "scope": "markup.fenced_code.block.markdown",
                    "settings": {
                        "foreground": "#ffff00", // yellow
                        // "fontStyle": "bold"
                    }
                },
                {
                    "scope": "punctuation.definition.markdown",
                    "settings": {
                        "foreground": "#62E884",
                        // "fontStyle": "bold"
                    }
                },
                //-------------------------------------------------------------
                //#endregion Markdown
                //-------------------------------------------------------------
                //-------------------------------------------------------------
                //#region JSON
                //-------------------------------------------------------------
                {
                    "name": "source.json-key",
                    "scope": "source.json support.type.property-name",
                    "settings": {
                        "foreground": "#8be9fd",
                        // "fontStyle": "bold"
                    }
                },
                {
                    "name": "source.json-value",
                    "scope": "source.json string.quoted.double.json",
                    "settings": {
                        "foreground": "#f1fa8c",
                        // Dracula
                        // "foreground": "#282a36", // background
                        // "foreground": "#44475a", // currentLine
                        // "foreground": "#f8f8f2", // foreground
                        // "foreground": "#6272a4", // comment
                        // "foreground": "#8be9fd", // cyan
                        // "foreground": "#50fa7b", // green
                        // "foreground": "#ffb86c", // orange
                        // "foreground": "#ff79c6", // pink
                        // "foreground": "#bd93f9", // purple
                        // "foreground": "#ff5555", // red
                        // "foreground": "#f1fa8c", // yellow
                        // "foreground": "#5BB6C1"  // dark cyan
                        // "foreground": "#DE6D77", // magenta
                        // "foreground": "#DD6B74" // magenta2
                        // One Dark
                        // "foreground": "#ECCC87" //gold
                        // "foreground": "#A2BF8A" // olive
                        // "foreground": "#8EBCBB" // greenBlue
                        // "foreground": "#86C0D1" // lightBlue
                        // "foreground": "#80A0C2" // blueGray
                        // "foreground": "#B58DAE" // lavender
                        // "foreground": "#ECCC87" // gold
                        // "foreground": "#C16069" // crmson
                        // "foreground": "#D2876D" // brick
                        // "foreground": "#ABACAD" // silver
                        // "foreground": "#C1C1C1" // smoke
                        // "foreground": "#ACB8C4" // ash
                        // Border
                        // "foreground": "#FFFFFF" // white-border
                        // "foreground": "#C197FA" // magenta-Border
                        // "foreground": "#55B0F3" // cyan-Border
                    }
                },
                {
                    "name": "source.json-quote",
                    "scope": [
                        "source.json punctuation.definition.dictionary.begin.json",
                        "source.json punctuation.definition.dictionary.end.json"
                    ],
                    "settings": {
                        "foreground": "#f8f8f2", // foreground
                        "fontStyle": "bold"
                    }
                },
                {
                    "name": "source.json-array",
                    "scope": [
                        "source.json punctuation.definition.array.begin.json",
                        "source.json punctuation.definition.array.end.json"
                    ],
                    "settings": {
                        "foreground": "#ff79c6", // pink
                        "fontStyle": "bold"
                    }
                },
                {
                    "name": "source.json-colonComma",
                    "scope": "source.json meta.structure.dictionary.value.json",
                    "settings": {
                        "foreground": "#ffffff",
                        // "fontStyle": "bold italic"
                    }
                },
                {
                    "name": "source.json.comments",
                    "settings": {
                        "foreground": "#ffffff"
                    }
                },
                //-------------------------------------------------------------
                //#endregion JSON
                //-------------------------------------------------------------
                //-------------------------------------------------------------
                //#region JS
                //-------------------------------------------------------------
                {
                    "scope": [
                        //following will be in italic (=FlottFlott)
                        "comment",
                        "entity.name.type.class", //class names
                        "keyword", //import, export, return…
                        "constant", //String, Number, Boolean…, this, super
                        "storage.modifier", //static keyword
                        "storage.type.class.js", //class keyword
                    ],
                    "settings": {
                        "fontStyle": "italic"
                    }
                },
                //-------------------------------------------------------------
                //#endregion JS
                //-------------------------------------------------------------
                //-------------------------------------------------------------
                //#region TXT
                //-------------------------------------------------------------
                {
                    "name": "source.txt",
                    "scope": "source.txt entity.name.type",
                    "settings": {
                        "foreground": "#ff0000"
                    }
                },
                //-------------------------------------------------------------
                //#endregion TXT
                //-------------------------------------------------------------

                //#region CPP
                {
                    "name": "storage.modifier.reference.cpp",
                    "scope":["storage.modifier.reference.cpp"],
                    "settings": {
                        "foreground": "#ffffff",
                        // "fontStyle": "bold"
                    }


                }

                //#endregion

                //-------------------------------------------------------------
                //#region OTHER
                //-------------------------------------------------------------
                {
                    "name": "comment",
                    "scope": [
                        "comment",
                    ],
                    "settings": {
                        "foreground": "#fff"
                    }
                },
                {
                    "name": "class",
                    "scope": [
                        "storage.type.class",
                    ],
                    "settings": {
                        "fontStyle": "italic bold",
                    }
                },
                {
                    "name": "functionParameter",
                    "scope": [
                        "storage.type.function", // function keyword
                        // "storage.type.function.arrow", // arrow of function
                        // "entity.name.function"
                        // "support.function" // function inside function
                    ],
                    "settings": {
                        "foreground": "#00ccff"
                    }
                },
                {
                    "name": "parameter",
                    "scope": [
                        "variable.parameter"
                    ],
                    "settings": {
                        "fontStyle": ""
                        // "foreground": "#999"
                    }
                },
                {
                    "name": "variable",
                    "scope": [
                        "variable"
                    ],
                    "settings": {
                        // "fontStyle": "underline"
                        // "foreground": "#ddd"
                        // "foreground": "#1ed4ec"
                        "foreground": "#9CDCFE"
                    }
                },
                {
                    "name": "variableProperty",
                    "scope": [
                        "variable.other.property"
                    ],
                    "settings": {
                        // "fontStyle": "underline"
                        "foreground": "#a2e700"
                    }
                },
                {
                    "name": "variableProperty",
                    "scope": [
                        "support.variable.property"
                    ],
                    "settings": {
                        // "fontStyle": "underline"
                        "foreground": "#a2e700"
                    }
                },
                {
                    "name": "jsDoc-CommentClass",
                    "scope": [
                        "storage.type.class.jsdoc"
                    ],
                    "settings": {
                        "fontStyle": "",
                        // "foreground": "#FF0000"
                    }
                },
                {
                    "name": "jsDoc-CommentClass",
                    "scope": [
                        "entity.name.type.instance.jsdoc"
                    ],
                    "settings": {
                        "fontStyle": "",
                        // "foreground": "#FF0000"
                    }
                },
                {
                    "name": "cssClass",
                    "scope": [
                        "entity.other.attribute-name.class.css"
                    ],
                    "settings": {
                        "fontStyle": ""
                        // "foreground": "#a2e700"
                    }
                },
                {
                    "name": "cssClassPseudo",
                    "scope": [
                        "entity.other.attribute-name.pseudo-element.css"
                    ],
                    "settings": {
                        "fontStyle": "",
                        "foreground": "#a2e700"
                    }
                }
                //-------------------------------------------------------------
                //#endregion OTHER
                //-------------------------------------------------------------
            ]
        }
    },
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,
    "eslint.validate": [
        "javascript"
    ],

    "files.associations": {
        "*.cpp": "cpp",
        "numeric": "cpp",
        "*.thor": "ruby",
        "*.jsx": "javascript",
        "Jenkinsfile*": "groovy",
        "*.md.html": "markdown",
        "*.clang-format": "yaml",
        "*.xml": "html",
        "*.svg": "html",
        "*.hbs": "html",
        "*.awk": "sh",
        ".code-snippets": "json",

    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.encoding": "utf8",
    "files.eol": "\n",
    "files.exclude": {
        ".git": true,
        ".gitignore": true,
        // ".vscode": true,
        ".eslintrc.json": true,
        "package-lock.json": true,
        "node_modules": true,
        "**/.git": true,
        "**/*.aux": true,
        "**/*.bbl": true,
        "**/*.bcf": true,
        "**/*.blg": true,
        "**/*.fdb_latexmk": true,
        "**/*.fls": true,
        "**/*.glg": true,
        "**/*.glo": true,
        "**/*.gls": true,
        "**/*.glsdefs": true,
        "**/*.idx": true,
        "**/*.ilg": true,
        "**/*.ind": true,
        "**/*.lof": true,
        "**/*.log": true,
        "**/*.lot": true,
        "**/*.mw": true,
        "**/*.nlo": true,
        "**/*.nls": true,
        "**/*.out": true,
        "**/*.run.xml": true,
        "**/*.synctex.gz": true,
        "**/*.thm": true,
        "**/*.toc": true,
        "**/*.xdy": true
    },
    "files.trimTrailingWhitespace": true,

    "git.promptToSaveFilesBeforeCommit": "always",

    "html.format.enable": true,
    "html.format.indentHandlebars": true,
    "html.format.indentInnerHtml": true,
    "html.format.wrapAttributes": "force-aligned",
    "html.format.wrapLineLength": 0,

    "json.format.keepLines": true,

