    "latex-workshop.latex.autoBuild.interval": 10000,
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.bibDirs": [ ],

    "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
    "latex-workshop.synctex.afterBuild.enabled": true,
    "latex-workshop.synctex.synctexjs.enabled": true,

    "latex-workshop.showContextMenu": true,
    "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": false,
    // "latex-workshop.view.pdf.viewer": "external",
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.watch.pdf.delay": 250,
    "latex-workshop.view.pdf.external.viewer.command": "SumatraPDF",
    "latex-workshop.view.pdf.external.viewer.args": [
        "-forward-search",
        "%TEX%",
        "%LINE%",
        "-reuse-instance",
        "-inverse-search",
        "\"cmd.exe\" /c code -r -g \"%f\":\"%l\"",
        "%PDF%"
    ],
    "latex-workshop.view.pdf.external.synctex.command": "SumatraPDF",
    "latex-workshop.view.pdf.external.synctex.args": [
        "-forward-search",
        "%TEX%",
        "%LINE%",
        "-reuse-instance",
        "-inverse-search",
        "\"cmd.exe\" /c code -r -g \"%f\":\"%l\"",
        "%PDF%"
    ],

    "latex-workshop.latex.recipes": [
        {
            "name": "clean-windows",
            "tools": [
                "clean-windows",
                // "clean-windows-auxdir"
            ]
        },
        {
            "name": "latex-dvips-ps2pdf",
            "tools": [
                "latex",
                "dvips",
                "ps2pdf",
                // "clean-windows"
            ]
        },
        {
            "name": "latex -> bibtex",
            "tools": [
                "latex",
                "bibtex",
                "latex",
                "dvips",
                "ps2pdf"
            ]
        },
        {
            "name": "latex => bibtex x 2",
            "tools": [
                "latex",
                "bibtex",
                "latex",
                "bibtex",
                "latex",
                "dvips",
                "ps2pdf"
            ]
        },
        {
            "name": "TeXcount",
            "tools": [ "TeXcount" ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "clean-windows",
            "command": "del",
            "args": [
                // "/s",
                // "/q",
                // "/f",
                "%DOCFILE%.dvi",
                "%DOCFILE%.ps"
            ]
            // "command": "echo amit"
        },
        {
            "name": "latex",
            "command": "latex",
            "args": [
                "-time-statistics",
                "-halt-on-error",
                "-file-line-error",
                "-aux-directory=TeXAux",
                "-synctex=-1",
                "%DOCFILE%"
            ],
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ],
            "env": { },
        },
        {
            "name": "dvips",
            "command": "dvips",
            "args": [
                "-q",
                "%DOCFILE%.dvi",
                "-o",
                "%DOCFILE%.ps"
            ],
        },
        {
            "name": "ps2pdf",
            "command": "ps2pdf",
            "args": [
                "-dNOSAFER",
                "%DOCFILE%.ps",
                "%DOCFILE%.pdf"
            ],
        },
        {
            "name": "TeXcount",
            "command": "TeXcount",
            "args": [
                "%DOCFILE%.tex"
            ]
        }
    ],

    "latex-workshop.texcount.autorun": "onSave",
    "latex-workshop.texcount.interval": 10000,

